			hasil=bil1-bil2;
			printf("\t------------------------------- -\n");
			printf("\tHasil:\t\t\t   %d\n", hasil);
			printf ("\n\tIngin Mencoba lagi ? \n"); 
			printf ("\tYa atau Tidak (Y/T): "); 
			scanf ("%s", &ulang);
			if(ulang=='Y'|| ulang=='y'){
			system("cls");
			}
			else{
				exit(0);
			}
			break;
		case 3 : 
			printf("\tPERKALIAN\t\t\t\t\n");
			printf("\tMasukkan Bilangan Pertama: ");
			bil1=cek_valid();
			printf("\tMasukkan Bilangan Kedua  : ");
			bil2=cek_valid();
			hasil=bil1*bil2;
			printf("\t------------------------------- x\n");
			printf("\tHasil:\t\t\t   %d\n", hasil);
			printf ("\n\tIngin Mencoba lagi ? \n"); 
			printf ("\tYa atau Tidak (Y/T): "); 
			scanf ("%s", &ulang);
			if(ulang=='Y'|| ulang=='y'){
			system("cls");
			}
			else{
				exit(0);
			}
			break;
		case 4 :
			printf("\tPEMBAGIAN\t\t\t\t\n");
			printf("\tMasukkan Bilangan Pertama: ");
			bil1=cek_valid();
			printf("\tMasukkan Bilangan Kedua  : ");
			bil2=cek_valid();
			hasil=bil1/bil2;
			printf("\t------------------------------- :\n");
			printf("\tHasil:\t\t\t   %d\n", hasil);
			printf ("\n\tIngin Mencoba lagi ? \n"); 
			printf ("\tYa atau Tidak (Y/T): "); 
			scanf ("%s", &ulang);
			if(ulang=='Y'|| ulang=='y'){
			system("cls");
			}
			else{
				exit(0);
			}
			break;
		case 5 : 
			printf("\tMODULUS\t\t\t\t\n");
			printf("\tMasukkan Bilangan Pertama: ");
			bil1=cek_valid();
			printf("\tMasukkan Bilangan Kedua  : ");
			bil2=cek_valid();
			hasil=bil1%bil2;
			printf("\t------------------------------- %\n");
		 	printf("\tHasil:\t\t\t   %d\n", hasil);
			printf ("\n\tIngin Mencoba lagi ? \n"); 
			printf ("\tYa atau Tidak (Y/T): "); 
			scanf ("%s", &ulang);
			if(ulang=='Y'|| ulang=='y'){
			system("cls");
			}
			else{
				exit(0);
			}
			break;
		case 6 :
			exit(0);
